    <script>
      import { gsap } from "gsap";

      const tl = gsap.timeline();

      tl.to(".text-line:not(.smile)", {
        opacity: 1,
        x: 0,
        duration: 3,
        ease: "power2.out",
        stagger: 0.6,
      });

      tl.to(
        ".smile",
        {
          opacity: 1,
          y: 0,
          x: 0,
          duration: 2,
          ease: "power2.out",
        },
        "+=0.5"
      );

      tl.to(
        ".text-line:not(.smile)",
        {
          opacity: 0,
          y: -100,
          duration: 0.6,
          ease: "power2.in",
          stagger: 0.1,
        },
        "+=0.2"
      );

      tl.to(
        ".smile",
        {
          opacity: 0,
          y: -600,
          duration: 0.6,
          ease: "power2.in",
          stagger: 0.1,
        },
        "+=0.4"
      );

      tl.to(
        ".loading-container",
        {
          opacity: 0,
          duration: 1,
          ease: "power2.inOut",
        },
        "+=0.5"
      ).to(
        ".hero-section",
        {
          opacity: 1,
          duration: 1,
          ease: "power2.inOut",
        },
        "-=0.5"
      );

      tl.from(".hero-header", {
        y: -50,
        opacity: 0,
        duration: 1,
        ease: "power2.out",
      })
        .from(
          ".hero-title",
          {
            y: 100,
            opacity: 0,
            duration: 1,
            ease: "power2.out",
          },
          "-=0.7"
        )
        .from(
          ".hero-subtitle",
          {
            y: 100,
            opacity: 0,
            duration: 1,
            ease: "power2.out",
          },
          "-=0.5"
        )
        .from(
          ".sidebar-left",
          {
            x: -100,
            opacity: 0,
            duration: 1,
            ease: "power2.out",
          },
          "-=0.5"
        )
        .from(
          ".sidebar-right",
          {
            x: 100,
            opacity: 0,
            duration: 1,
            ease: "power2.out",
