    <title>Riccardo x Playground</title>
    <style>
      @font-face {
        font-family: "Neue";
        src: url("/font/NeueMontreal-Regular.otf");
      }
      :root {
        --background-color: #0000ee;
        --primary-color: #fff;
        --secondary-color: #000;
      }
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html,
      body {
        font-family: "Neue", sans-serif;
        background-color: var(
          --background-color
        );
        overflow-x: hidden;
        overflow-y: hidden;
        text-transform: uppercase;
        width: 100%;
        max-width: 100vw;
        height: 100vh;
      }

      /* Loader */
      .loading-container {
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }

      .text-line {
        font-size: 9rem;
        opacity: 0;
      }

      .hello {
        transform: translateX(-100px);
      }

      .playground {
        color: var(--primary-color);
        transform: translateX(100px);
      }

      .im {
        transform: translateX(-100px);
      }

      .riccardo {
        color: var(--primary-color);
        transform: translateX(100px);
      }

      .nice-row {
        display: flex !important;
        flex-direction: row !important;
        align-items: center;
        gap: 2rem;
      }

      .nice-text {
        transform: translateX(-100px);
        margin-left: 70px;
      }

      .smile {
        color: var(--primary-color);
        transform: translateY(50px);
      }

      /* Main */

      .hero-section {
        position: absolute;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        opacity: 0;
        background-color: var(
          --background-color
        );
        color: var(--primary-color);
        display: grid;
        grid-template-rows: auto 1fr;
        padding: 0.5rem;
      }

      /* Header */
      .hero-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 1rem;
        margin-top: 0.5rem;
        margin-bottom: 5rem;
        opacity: 1;
      }

      .title {
        display: flex;
      }

      .title-x {
        color: var(--secondary-color);
        font-weight: bold;
      }

      .header-center {
        position: relative;
        left: -200px;
        color: var(--secondary-color);
      }

      /* Main content */
      .hero-title-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        margin-top: 8rem;
        margin-bottom: 4rem;
      }

      .hero-title {
        font-size: 3rem;
        font-weight: normal;
        line-height: 0.9;
      }

      .hero-subtitle {
        font-size: 2rem;
        font-weight: normal;
        line-height: 0.9;
        color: var(--secondary-color);
      }

      .passion {
        font-size: 3rem;
        font-weight: normal;
        line-height: 0.9;
        color: var(--primary-color);
      }

      .vertical-text {
        position: absolute;
        right: 0rem;
        top: 30%;
        transform: rotate(-90deg)
          translateX(50%);
        transform-origin: center;
        font-size: 1rem;
      }

      /* Sidebar Left */
      .sidebar-left {
        position: absolute;
        left: 1rem;
        top: 80%;
        transform: translateY(-50%);
        width: 300px;
      }

      .lab-section h3 {
        font-size: 1.2rem;
        margin-bottom: 1rem;
        color: var(--secondary-color);
      }

      .project {
        margin-bottom: 1rem;
      }

      .project h4 {
        font-size: 1rem;
        margin-bottom: 0.5rem;
        color: var(--secondary-color);
      }

      .project p {
        font-size: 0.8rem;
        line-height: 1.4;
        opacity: 0.8;
      }

      /* Sidebar Right */
      .sidebar-right {
        position: absolute;
        right: 1rem;
        top: 80%;
        transform: translateY(-50%);
        width: 300px;
        text-align: right;
      }

      .sidebar-right div {
        margin-bottom: 1rem;
      }

      .sidebar-right h3 {
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
        color: var(--secondary-color);
      }

      .sidebar-right p {
        font-size: 0.8rem;
        line-height: 1.4;
        opacity: 0.8;
      }

      /* Link styles */
      a {
        color: inherit;
        text-decoration: none;
      }

      a:hover {
        opacity: 0.7;
        transition: opacity 0.3s ease;
      }

      /* Footer */
      .hero-footer {
        position: absolute;
        bottom: 0.3rem;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 2rem;
        font-size: 1rem;
        opacity: 1;
      }

      .hero-footer a {
        color: var(--primary-color);
        text-decoration: none;
      }

      .hero-footer a:hover {
        opacity: 0.7;
        transition: opacity 0.3s ease;
      }

      /* Loader */
      @media (max-width: 768px) {
        .text-line {
          font-size: 4rem;
        }

        .loading-container {
          padding: 1rem;
          gap: 1rem;
        }

        .nice-row {
          flex-direction: column !important;
          gap: 1rem;
          align-items: center;
        }

        .nice-text {
          margin-left: 0;
          transform: translateX(0);
        }

        .smile {
          transform: translateY(0);
        }
      }

      @media (max-width: 480px) {
        .text-line {
          font-size: 3rem;
        }
      }

      /* Hero */
      @media (max-width: 768px) {
        .hero-section {
          padding: 0.5rem;
        }

        .hero-header {
          font-size: 0.7rem;
          margin-bottom: 1rem; /* ridotto da 2rem */
        }

        .title {
          font-size: 0.8rem;
        }

        .header-center {
          left: 0;
        }

        /* Hero title container */
        .hero-title-container {
          margin-bottom: 1rem;
          margin-top: 2rem; /* ridotto da 4rem */
        }

        .hero-title {
          font-size: 1.8rem;
        }

        .hero-subtitle {
          font-size: 1.8rem;
        }

        .passion {
          font-size: 1.4rem;
        }

        /* Sidebar */
        .sidebar-left {
          width: 150px;
          left: 0.3rem;
          top: 40%; /* alzata dal 50% */
          transform: translateY(-40%);
        }

        .sidebar-right {
          width: 120px;
          right: 0.5rem;
          top: 40%; /* alzata dal 50% */
          transform: translateY(-40%);
        }

        .sidebar-left h3,
        .sidebar-right h3 {
          font-size: 0.8rem;
          margin-bottom: 1rem;
        }

        .project h4 {
          font-size: 0.7rem;
        }

        .project p,
        .sidebar-right p {
          font-size: 0.5rem;
          line-height: 1.3;
        }

        /* Footer */
        .hero-footer {
          font-size: 0.7rem;
          gap: 1rem;
        }

        .vertical-text {
          font-size: 0.7rem;
          right: 0.5rem;
          top: 40%;
        }

        /* Footer mobile */
        .hero-footer {
          gap: 1.5rem;
          font-size: 0.8rem;
          bottom: 0.5rem; /* spostato leggermente più su */
        }
      }

      @media (max-width: 480px) {
        .hero-title {
          font-size: 1.8rem;
        }

        .hero-subtitle {
          font-size: 1.8rem;
        }

        .passion {
          font-size: 1.4rem;
        }

        .project p,
        .sidebar-right p {
          font-size: 0.5rem;
        }

        /* Spazi ancora più ridotti per telefoni piccoli */
        .hero-title-container {
          margin-top: 2rem; /* riportato più in basso */
          margin-bottom: 1rem;
        }

        .hero-footer {
          bottom: 0.5rem; /* più spazio dal basso */
          font-size: 0.7rem;
        }

        /* Sidebar ancora più in alto su telefoni piccoli */
        .sidebar-left,
        .sidebar-right {
          top: 55%; /* riportate più in alto */
          transform: translateY(-45%);
        }
      }
    </style>
